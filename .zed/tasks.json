// Static tasks configuration.
//
// Example:
[
  {
    "label": "debug",
    "command": "cargo run",
    "env": {
      "RUST_BACKTRACE": "1",
      "RUST_LOG": "info,wgpu_core=off"
    },
    "use_new_terminal": false,
    "allow_concurrent_runs": true,
    "reveal": "always",
    "hide": "never",
    "shell": "system"
  },
  {
    "label": "release",
    "command": "cargo run",
    "args": ["--release"],
    "use_new_terminal": false,
    "allow_concurrent_runs": true,
    "reveal": "always",
    "hide": "never",
    "shell": "system",
    "env": {
      "RUST_LOG": "warn"
    }
  },
  {
    "label": "web debug",
    "command": "trunk serve",
    "env": {
      "RUST_BACKTRACE": "1",
      "RUST_LOG": "info,wgpu_core=off"
    },
    "use_new_terminal": false,
    "allow_concurrent_runs": true,
    "reveal": "always",
    "hide": "never",
    "shell": "system"
  },
  {
    "label": "web release",
    "command": "trunk serve --release",
    "env": {
      "RUST_BACKTRACE": "1",
      "RUST_LOG": "info,wgpu_core=off"
    },
    "use_new_terminal": false,
    "allow_concurrent_runs": true,
    "reveal": "always",
    "hide": "never",
    "shell": "system"
  },
  {
    "label": "test rendering",
    "command": "cargo test",
    "args": ["-p brush-render -- --nocapture"],
    "env": {
      "RUST_BACKTRACE": "1"
    },
    "use_new_terminal": false,
    "allow_concurrent_runs": true,
    "reveal": "always",
    "hide": "never",
    "shell": "system"
  },
  {
    "label": "bench rendering",
    "command": "cargo bench",
    "args": ["-p brush-render"],
    "env": {
      "RUST_BACKTRACE": "1"
    },
    "use_new_terminal": false,
    "allow_concurrent_runs": true,
    "reveal": "always",
    "hide": "never",
    "shell": "system"
  }
]
